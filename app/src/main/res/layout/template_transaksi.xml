<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/style_bglayout"
    android:elevation="90dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/mainLayout">

    <TextView
        android:id="@+id/idtransaksi"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/transaksijumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/hitam"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/transaksiketerangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/transaksideskripsi"
            android:inputType="textCapSentences"
            android:text="Beli Batagor"
            android:textColor="@color/abuteks"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/transaksideskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="KELUAR"
            android:textColor="@color/hijau"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/transaksitanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="20 Des 2022"
        android:textSize="14sp"
        android:textColor="@color/hitam"/>

</LinearLayout>